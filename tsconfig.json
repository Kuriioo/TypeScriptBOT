{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "es2018",
        "outDir": "dist",
        "lib": [
            "ESNEXT",
            "ESNEXT.Array",
            "ESNEXT.AsyncIterable",
            "ESNEXT.Intl",
            "ESNEXT.Symbol",
            "DOM"
        ],
        "sourceMap": false,
        "inlineSourceMap": true,
        "inlineSources": true,
        "incremental": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}
